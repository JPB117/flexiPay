<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:d="urn:import:com.workpoint.mwallet.client.ui.component"
	xmlns:c="urn:import:com.workpoint.mwallet.client.ui.charts"
	ui:generateLocales='default'>

	<g:HTMLPanel styleName="home-reports content-body overflow-y">
		<div class="content-header hide">
			<h3>
				<span class="icon-dashboard"></span>
				&nbsp;
				<span>Dashboard</span>
			</h3>
		</div>
		<div class="row-fluid hide">
			<div class="alert alert-block alert-success">
				<button type="button" class="close" data-dismiss="alert">&times;</button>
				Dashboard is under Construction and will be launched soon..
			</div>
		</div>

		<g:HTMLPanel styleName="content-top hide" ui:field="divContentTop">
			<!--Action Buttons -->
			<div class="action-buttons row-fluid">
				<div class="span6 till-box">
					<b:Form type="HORIZONTAL">
						<b:ControlGroup>
							<b:ControlLabel>Select Till:</b:ControlLabel>
							<b:Controls>
								<d:DropDownList ui:field="lstTills">
								</d:DropDownList>
							</b:Controls>
						</b:ControlGroup>
					</b:Form>
				</div>

				<div class="span6 date-box">
					<b:Form type="HORIZONTAL">
						<b:ControlGroup>
							<b:ControlLabel>Choose Date(s):</b:ControlLabel>
							<b:Controls>
								<b:NavPills>
									<b:DropdownButton ui:field="periodDropdown"></b:DropdownButton>
								</b:NavPills>
							</b:Controls>
						</b:ControlGroup>
					</b:Form>
					<g:HTMLPanel styleName="row-fluid" ui:field="panelDates">
						<b:Row>
							<g:HTMLPanel ui:field="panelDatePicker1" styleName="relative">
								<d:CustomDateBox format="dd/mm/yyyy" autoClose="false"
									ui:field="boxDatePickerStart" />
							</g:HTMLPanel>
							<g:HTMLPanel ui:field="panelDatePicker2" styleName="relative">
								<d:CustomDateBox format="dd/mm/yyyy" autoClose="false"
									ui:field="boxDatePickerEnd" />
							</g:HTMLPanel>
						</b:Row>
						<b:Row>
							<g:FocusPanel styleName="row-button hide" ui:field="panelDone">
								<b:Column size="4" styleName="pull-right">
									<b:Button text="Done" ui:field="btnDone" type="PRIMARY"
										styleName="btn">
									</b:Button>
								</b:Column>
							</g:FocusPanel>
						</b:Row>
					</g:HTMLPanel>

					<div class="span1 pull-right">
						<d:ActionLink ui:field="aRefresh" styleName="btn"
							dataToggle="tooltip" title="Refresh">
							<span class="icon-refresh"></span>
						</d:ActionLink>
					</div>
				</div>
			</div>
		</g:HTMLPanel>


		<div class="row-fluid top-section section">
			<div class="span4">
				<a class="dashboard-stat tertiary">
					<div class="visual">
						<!-- <i class="icon-money"></i> -->
					</div> <!-- /.visual -->

					<div class="details">
						<span class="value" ui:field="spnTotalFunding">
							10,500
						</span>
						<span class="content-block">Money In</span>
					</div> <!-- /.details -->

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->

			<div class="span4">
				<a class="dashboard-stat primary">
					<div class="visual">
						<!-- <i class="icon-folder-open"></i> -->
					</div> <!-- /.visual -->

					<div class="details">
						<span class="value" ui:field="spnActual">
							24
						</span>
						<span class="content-block">Total Transactions</span>
					</div> <!-- /.details -->

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->

			<div class="span4">
				<a class="dashboard-stat secondary">
					<div class="visual">
						<!-- <i class="icon-certificate"></i> -->
					</div> <!-- /.visual -->

					<div class="details">
						<span class="value" ui:field="spnRemaining">
							15
						</span>
						<span class="content-block">Merchants</span>
					</div> <!-- /.details -->

					<!-- <i class="icon-play-circle more"></i> -->

				</a> <!-- /.dashboard-stat -->

			</div> <!-- /.col-md-3 -->
		</div>
		<g:HTMLPanel>
			<b:NavPills>
				<b:DropdownButton ui:field="TrendsDropdown"></b:DropdownButton>
			</b:NavPills>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="panelTrends" styleName="row-fluid span12">
		</g:HTMLPanel>

		<!-- <div class="row-fluid"> -->
		<!-- <div class="span12"> -->
		<!-- <div class="portlet"> -->
		<!-- <div class="portlet-header"> -->
		<!-- <h3> -->
		<!-- <i class="icon-bar-chart"></i> -->
		<!-- Merchant Trends -->
		<!-- </h3> -->
		<!-- </div> -->
		<!-- <g:HTMLPanel ui:field="panelTrends" styleName="portlet-content"> -->
		<!-- </g:HTMLPanel> -->
		<!-- </div> -->
		<!-- </div> -->
		<!-- </div> -->

		<div class="row-fluid">
			<div class="span6">
				<div class="portlet">
					<div class="portlet-header">
						<h3>
							<i class="icon-bar-chart"></i>
							Merchant Performance
						</h3>
					</div>
					<g:HTMLPanel ui:field="panelChart" styleName="portlet-content">
						<c:PieChart ui:field="pieTillAnalysis" styleName="hide"></c:PieChart>
					</g:HTMLPanel>
				</div>
			</div>
		</div>

	</g:HTMLPanel>

</ui:UiBinder>
