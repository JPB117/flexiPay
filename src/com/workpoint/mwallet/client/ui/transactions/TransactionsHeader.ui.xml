<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component'
	xmlns:b="urn:import:com.github.gwtbootstrap.client.ui" xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui">

	<g:HTMLPanel styleName="summary-container">
		<div class="row-fluid">
			<div class="span4">
				<div class="big-text">
					<span class="" ui:field="spnTransactions" title="Number of Transactions"></span>
				</div>
				<div class="bold muted helper-font-small">TRANSACTIONS</div>
			</div>

			<div class="span4">
				<div class="big-text">
					<span class="" ui:field="spnAmount" title="Total Amount"></span>
				</div>
				<div class="bold muted helper-font-small">AMOUNT</div>
			</div>

			<div class="span4 no-border">
				<div class="big-text">
					<b:Popover heading="More Summary" ui:field="popSummaries" html="true" placement="TOP">
						<g:InlineLabel ui:field="spnTills" title="Transacted Tills"></g:InlineLabel>
					</b:Popover>
				</div>
				<div class="bold muted helper-font-small" ui:field="panelText"></div>
			</div>
		</div>
	</g:HTMLPanel>
</ui:UiBinder> 