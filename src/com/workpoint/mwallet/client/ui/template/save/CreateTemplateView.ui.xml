<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.workpoint.mwallet.client.ui.component.autocomplete'
	xmlns:t='urn:import:com.workpoint.mwallet.client.ui.component.tabs'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<!-- Issues -->
		<d:IssuesPanel ui:field="issues">
		</d:IssuesPanel>

		<t:TabPanel ui:field="divTabs">
		</t:TabPanel>

		<div class="row-fluid">
			<div class="span6">
				<label for="Message" class="span6 control-label">Choose Type </label>
				<div class="span6">
					<d:DropDownList ui:field="dropDownType">
					</d:DropDownList>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<div class="span6">
				<label for="Message" class="span6 control-label">Name</label>
				<div class="span6">
					<g:TextBox ui:field="txtName" />
				</div>
			</div>
		</div>

		<!-- <div class="row-fluid"> <div class="span6"> <label for="keyword" class="span6 
			control-label">Select KeyWord:</label> <div class="span6"> <d:DropDownList 
			ui:field="dropDownPackages"> </d:DropDownList> </div> </div> </div> -->

		<!-- <div class="row-fluid"> <div class="span6"> <label for="Customers" 
			class="span6 control-label">Customers</label> <div class="span6"> <g:TextArea 
			ui:field="txtCustomers"/> </div> </div> </div> -->

		<g:HTMLPanel ui:field="customerPanel">
			<div class="control-group">
				<div class="control-label" ui:field="divCustomer">Customers:</div>
				<div class="controls">
					<a:AutoCompleteField ui:field="aCustomers" />
				</div>
			</div>
		</g:HTMLPanel>

		<g:HTMLPanel ui:field="tillPanel">
			<div class="control-group">
				<div class="control-label" ui:field="divTill">Tills:</div>
				<div class="controls">
					<a:AutoCompleteField ui:field="aTills" />
				</div>
			</div>
		</g:HTMLPanel>

		<div class="row-fluid">

			<div class="span12">
				<div class="span5">
					<label for="Message" class="span6 control-label">Compose Template</label>
				</div>

				<div class="span5">
					<label for="keyword" class="span6 control-label">KeyWords:</label>
					<div class="span2">
						<d:DropDownList ui:field="dropDownPackages">
						</d:DropDownList>
					</div>
				</div>

			</div>

			<div class="span12">
				<g:TextArea ui:field="txtComposeArea" width="80%" height="80px" />
			</div>
		</div>

		<g:HTMLPanel ui:field="defaultPanel">
			<div class="row-fluid">
				<div class="span6">
					<label for="Message" class="span6 control-label">Default?</label>
					<div class="span6">
						<g:CheckBox ui:field="chkDefault" />
					</div>
				</div>
			</div>
		</g:HTMLPanel>

	</g:HTMLPanel>

</ui:UiBinder>

