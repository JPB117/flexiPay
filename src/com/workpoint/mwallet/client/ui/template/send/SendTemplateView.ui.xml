<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component' xmlns:g='urn:import:com.google.gwt.user.client.ui'
	xmlns:a='urn:import:com.workpoint.mwallet.client.ui.component.autocomplete'
	xmlns:t='urn:import:com.workpoint.mwallet.client.ui.component.tabs'
	ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<g:HTMLPanel>
		<!-- Issues -->
		<d:IssuesPanel ui:field="issues">
		</d:IssuesPanel>


		<!-- Tabs <t:TabPanel ui:field="divTabs"> </t:TabPanel> -->

		<div class="row-fluid">
			<h3>
				Send Text Messages
				<br />
			</h3>
			<hr />
		</div>

		<div class="row-fluid">
			<label for="Message" class="span6 control-label">Contacts</label>
			<div class="span6">
				<g:TextArea ui:field="txtContactArea" width="100%" height="60px" />
			</div>
		</div>

		<div class="row-fluid">
			<div class="span6">
				<label for="keyword" class="span6 control-label">Select Template:</label>
				<div class="span6">
					<d:DropDownList ui:field="lstTemplates">
					</d:DropDownList>
				</div>
			</div>
		</div>

		<div class="row-fluid">
			<label for="Message" class="span6 control-label">Message Content</label>
			<div class="span6">
				<g:TextArea ui:field="txtMessageArea" width="50%" height="60px" />
			</div>
		</div>


	</g:HTMLPanel>

</ui:UiBinder>

