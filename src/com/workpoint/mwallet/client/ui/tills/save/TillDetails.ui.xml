<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:d='urn:import:com.workpoint.mwallet.client.ui.component' xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<g:HTMLPanel>
		<fieldset>
			<div class="control-group">
				<div class="control-label" ui:field="divActivityName">Business Name:</div>
				<div class="controls">
					<g:TextBox ui:field="txtBusinessName" styleName="input-xlarge"></g:TextBox>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

			<!-- <div class="control-group hide">
				<div class="control-label" ui:field="divTill">Till Code:</div>
				<div class="controls">
					<g:TextBox ui:field="" styleName="input-xlarge"></g:TextBox>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div> -->

			<div class="control-group" ui:field="divImport">
				<div class="controls">
					<label for="Names">
						<b>Till Code:</b>
					</label>
					<div class="input-append">
						<d:TextField ui:field="txtTillCode" placeholder="eg: Import Till Code">
						</d:TextField>
						<d:ActionLink ui:field="aPickTill" styleName="btn btn-primary">
							Import
						</d:ActionLink>
					</div>
					<span ui:field="spnMessage">
					</span>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label" ui:field="divPhone">Till Phone No:</div>
				<div class="controls">
					<g:TextBox ui:field="txtPhone" styleName="input-xlarge"></g:TextBox>
					<span class="mandatory" title="Required Field">*</span>
				</div>
			</div>

			<div class="control-group">
				<div class="control-label" ui:field="divEnabled">Enabled:</div>
				<div class="controls">
					<g:CheckBox ui:field="chckEnable" styleName="input-xlarge"></g:CheckBox>
				</div>
			</div>
		</fieldset>
	</g:HTMLPanel>
</ui:UiBinder> 